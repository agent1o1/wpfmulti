<Window x:Class="WpfMulimedia.ParametricSurface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMulimedia"
        mc:Ignorable="d"
        Title="ParametricSurface" Height="300" Width="300">
    <Viewport3D Name="viewport">
        <Viewport3D.Camera>
            <PerspectiveCamera Position="3,2,2" LookDirection="-3,-2,-2"
                               UpDirection="0,1,0"/>
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <Model3DGroup>
                    <AmbientLight Color="White"/>
                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>
</Window>
